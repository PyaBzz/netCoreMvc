@using myCoreMvc.UI.Controllers
@using myCoreMvc.Domain;
@using Baz.CoreMvc

@model Order
@{ ViewBag.Title = "Order Details"; }

<a asp-controller="@(Short<OrderListController>.Name)" asp-action="@nameof(OrderListController.Index)">Back</a>

@if (@Model != null)
{
    <h3 probe="OrderDetailsHeader">Order details</h3>
    <br />
    <ObjectDetails Object=@Model>
        <a asp-controller="@(Short<OrderEnterController>.Name)" asp-action="@nameof(OrderEnterController.Index)" asp-route-id="@Model.Id">Edit</a>
        <ActionWithConfirm controller-type="@typeof(OrderDetailsController)" method-name="@nameof(OrderDetailsController.Delete)" message="Delete this" route-parameter="@Model.Id" />
    </ObjectDetails>
}
else
{
    <h5>Order not found!</h5>
}
