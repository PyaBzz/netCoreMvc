@using myCoreMvc.UI.Controllers;
@using Baz.CoreMvc

@model OrderEnterController.EnterModel
@{ ViewBag.Title = "Order Details";
    var addMode = Model.Id == Guid.Empty;
}

<h2 id="message">@Model.Message</h2>

<a asp-controller="@(Short<OrderListController>.Name)" asp-action="@nameof(OrderListController.Index)">Back</a>

@if (addMode)
{<h3>Add Order</h3>}
else
{<h3>Edit Order</h3>}

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label>Product</label>
    <select asp-for=@Model.Product asp-items="Model.ProductChoices"></select>
    <br />
    <label>Reference</label>
    <input type="text" name="Reference" value="@Model.Reference" />
    <br />
    <label asp-for=@Model.Name></label>
    <input type="text" name="Name" value="@Model.Name" /><span asp-validation-for="Name"></span>
    <br />
    <label>Priority</label>
    <select asp-for=@Model.Priority asp-items="Model.PriorityChoices"></select>
    <br />
    <input type="submit" name="Save" value="Save" />
</form>